{
  "name": "iba-cleaning-api",
  "version": "1.0.0",
  "description": "API server for IBA Global Service cleaning platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "build": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js",
    "deploy": "wrangler deploy",
    "d1:create": "wrangler d1 create iba-cleaning-db",
    "d1:migrate": "wrangler d1 execute iba-cleaning-db --file=./schema.sql"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "stripe": "^14.7.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.84.0"
  }
}
